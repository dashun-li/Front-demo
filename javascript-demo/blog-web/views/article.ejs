<script>
    // 返回顶部按钮的响应式设置
    (function(){
       
        var wid = document.body.clientWidth;
        if(wid <= 640){
            $(".blog-sidebar").addClass('am-hide')
        }else{
            $(".blog-sidebar").removeClass('am-hide')
        };
        if (wid >= 1000) {
            $(".am-gotop").css({'right':120})
        } else {
            $(".am-gotop").css({ 'right': 20 })
        };
        
    })();
    

       
  

</script>
</body>
</html>